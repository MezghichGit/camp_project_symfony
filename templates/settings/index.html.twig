{% extends 'base.html.twig' %}

{% block title %}Settings index{% endblock %}

{% block body %}
    <h1>Settings index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Aboutus</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.aboutus }}</td>
                <td>{{ setting.adresse }}</td>
                <td>{{ setting.email }}</td>
                <td>{{ setting.telephone }}</td>
                <td>
                    <a href="{{ path('app_settings_show', {'id': setting.id}) }}">show</a>
                    <a href="{{ path('app_settings_edit', {'id': setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_settings_new') }}">Create new</a>
{% endblock %}
